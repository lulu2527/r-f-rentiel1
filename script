<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Question Piège</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
            background-color: #f4f4f4;
        }
        h1 {
            color: #333;
        }
        .buttons {
            margin-top: 20px;
        }
        button {
            font-size: 18px;
            padding: 10px 20px;
            margin: 10px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        #yes {
            background-color: #4CAF50;
            color: white;
            font-size: 18px;
        }
        #no {
            background-color: #FF4C4C;
            color: white;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <h1>Veux-tu être d'accord ?</h1>
    <div class="buttons">
        <button id="yes">Oui</button>
        <button id="no">Non</button>
    </div>
    
    <script>
        let yesButton = document.getElementById("yes");
        let noButton = document.getElementById("no");
        
        noButton.addEventListener("click", function() {
            let yesSize = parseInt(window.getComputedStyle(yesButton).fontSize);
            let noSize = parseInt(window.getComputedStyle(noButton).fontSize);
            
            yesButton.style.fontSize = (yesSize + 5) + "px";
            noButton.style.fontSize = (noSize - 5) + "px";
            
            if (noSize <= 10) {
                noButton.disabled = true;
                noButton.style.opacity = "0.5";
            }
        });
    </script>
</body>
</html>
